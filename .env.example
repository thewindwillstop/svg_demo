
# Environment variables for SVG Generator Service

# Server Configuration
PORT=8080
GIN_MODE=release

# Claude AI Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_BASE_URL=https://api.anthropic.com

# Recraft AI Configuration  
RECRAFT_API_KEY=your_recraft_api_key_here
RECRAFT_BASE_URL=https://external.api.recraft.ai

# SVG.IO Configuration
SVGIO_API_KEY=your_svgio_api_key_here
SVGIO_BASE_URL=https://svg.io

# OpenAI API Key (optional, for translation service)
# If not set, translation will be skipped and original input will be used
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
LOG_LEVEL=info
TIMEOUT=30s

# Docker specific settings
DOCKER_BUILDKIT=1
