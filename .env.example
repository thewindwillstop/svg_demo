
# Environment variables for SVG Generator Service

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_TIMEOUT=60s
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# SVG.IO Configuration
SVGIO_API_KEY=your_svgio_api_key_here
SVGIO_BASE_URL=https://api.svg.io
SVGIO_GENERATE_ENDPOINT=/v1/generate
SVGIO_TIMEOUT=60s
SVGIO_MAX_RETRIES=3
SVGIO_ENABLED=true

# Recraft AI Configuration  
RECRAFT_API_KEY=your_recraft_api_key_here
RECRAFT_BASE_URL=https://external.api.recraft.ai
RECRAFT_GENERATE_ENDPOINT=/v1/images/generations
RECRAFT_VECTORIZE_ENDPOINT=/v1/images/vectorize
RECRAFT_TIMEOUT=60s
RECRAFT_MAX_RETRIES=3
RECRAFT_ENABLED=true
RECRAFT_DEFAULT_MODEL=recraftv3
RECRAFT_SUPPORTED_MODELS=recraftv3,recraftv2

# OpenAI Configuration (supports all OpenAI-compatible models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=60s
OPENAI_MAX_RETRIES=3
OPENAI_ENABLED=true
OPENAI_DEFAULT_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Translation Service Configuration
TRANSLATION_ENABLED=true
TRANSLATION_SERVICE_URL=https://api.openai.com/v1/chat/completions
TRANSLATION_DEFAULT_MODEL=gpt-3.5-turbo
TRANSLATION_TIMEOUT=45s
TRANSLATION_MAX_RETRIES=2

# Application Settings
LOG_LEVEL=info

# Docker specific settings
DOCKER_BUILDKIT=1
